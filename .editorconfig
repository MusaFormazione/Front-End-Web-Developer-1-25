# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# JavaScript files
[*.{js,jsx,ts,tsx,json}]
indent_style = space
indent_size = 2
quote_type = single

# HTML, CSS files
[*.{html,css}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false